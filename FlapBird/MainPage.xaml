<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlapBird.MainPage"
             Shell.NavBarIsVisible="False">

       <Grid>
              <Grid.GestureRecognizers>
                     <TapGestureRecognizer Tapped="OnGridClicked"/>
              </Grid.GestureRecognizers>


              <Image x:Name="imgFundo"
                     Source="fundo.png"
                     Aspect="Fill"
                     HorizontalOptions="Fill"
                     VerticalOptions="Fill"/>

              <Image x:Name="pipaaa"
                     Source="pipaa.png"
                     HeightRequest="80"
                     WidthRequest="160"
                     HorizontalOptions="Center"/>

              <Image x:Name="imgBaixo"
                     IsVisible="False"
                     Source="canobaixo2.png"
                     HeightRequest="650"
                     WidthRequest="100"
                     Aspect="Fill"
                     BackgroundColor="Red"
                     HorizontalOptions="End"
                     VerticalOptions="End"/>

              <Image x:Name="imgCima"
                     Source="canocima2.png"
                     HeightRequest="650"
                     WidthRequest="100"
                     Aspect="Fill"
                     BackgroundColor="Blue"
                     HorizontalOptions="End"
                     VerticalOptions="Start"/>


              <Image x:Name="imgChao"
                     Source="chao.png"
                     HeightRequest="100"
                     Aspect="AspectFill"
                     HorizontalOptions="Fill"
                     VerticalOptions="End"/>

              <Label x:Name ="labelScore"
                     Text ="Canos:"
                     FontFamily="Popcat.ttf"/>

              <Frame x:Name="frameGameOver"
                     BackgroundColor="#99000000"
                     HorizontalOptions="Fill"
                     VerticalOptions="Fill">
                     <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnGameOverClicked"/>
                     </Frame.GestureRecognizers>
                     <Image Source="gameover.png"/>

                     

              </Frame>








       </Grid>
</ContentPage>
